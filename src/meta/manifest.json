{
    "name": "Catify Extension",
    "description": "Random cat gifs on your browser",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "cat-512.png",
        "48": "cat-512.png",
        "128": "cat-512.png"
    },
    "permissions": ["tabs", "https://api.giphy.com/*"],
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "script_bundle.js"
        ]
    }],
    "web_accessible_resources": ["assets/*"]
}